<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/margin_default"
              android:gravity="center"
              android:focusable="true"
              android:clickable="true"
              android:background="@drawable/bg_scan_device">

    <ImageView
        android:id="@+id/iv_scanDeviceListItem_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/margin_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scanDeviceListItem_deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:textColor="#000"
            android:textSize="@dimen/textSize_default"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_scanDeviceListItem_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:textColor="#000"
            android:textSize="@dimen/textSize_smaller"
            android:textStyle="normal"
            android:gravity="center"
            android:lines="1" />

        <TextView
            android:id="@+id/tv_scanDeviceListItem_osInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:textColor="#000"
            android:textSize="@dimen/textSize_smaller"
            android:textStyle="normal"
            android:gravity="center"
            android:lines="1" />

    </LinearLayout>

</LinearLayout>